<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>
    <link href= "/assets/login.css" rel= "stylesheet" type= "text/css" />

</head>
<body>
    <div class="wrapper">
       <h2>Signup</h2>
       <form action="/users/signup" method="post">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" minlength="3" maxlength="20" placeholder="Enter your name" required autocomplete="off">
        </div>

        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" name="email" id="email" placeholder="example@gmail.com" required>
        </div>


        <div class="form-group">
            <label for="password">password:</label>
            <input type="password" name="password"  minlength="4" maxlength="20" id="password" placeholder="password" required>
        </div>
        
        <button type="submit" class="submit-btn">Signup</button>
       

       </form>
    </div>
   
</body>
</html>